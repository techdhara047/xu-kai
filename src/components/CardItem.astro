---
import { Image } from "astro:assets";

const { item } = Astro.props;
---

<a href={item.link} target="_blank">
  <div class="carditem">
    <figure class="circle">
      {item.img && <Image src={item.img} alt={item.name} />}
    </figure>
    <p>Watch on {item.name}</p>
  </div>
</a>

<style>
  .carditem {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    transition: transform 0.3s linear;
  }
  .circle {
    height: 2.6rem;
    width: 2.6rem;
    border-radius: 50%;
    background-color: white;
    overflow: hidden;
    transition: 0.3s linear;
  }
  .carditem:hover .circle {
    transform: scale(1.1);
  }
  .carditem p {
    font-size: 0.9rem;
  }
  .carditem:hover p {
    text-decoration: underline;
  }
  .circle img {
    height: 100%;
    width: 100%;
  }
</style>
