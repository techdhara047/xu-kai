---
import { Icon } from "astro-icon/components";
import MediaLinks from "./MediaLinks.astro";
const { title } = Astro.props;
---

<header>
  <div class="left">
    <div class="social-links">
      <a class="back" href="/"><Icon name="mdi:home-circle" /></a>
      <MediaLinks />
    </div>
  </div>
  <!-- <div class="center">{title}</div> -->
  <div class="end">
    <ul>
      <li><a href="/filmography">Filmography</a></li>
      <li class="about-icon" data-menu><Icon name="mdi:menu" /></li>
    </ul>
  </div>
</header>
<style>
  header {
    z-index: 2000;
    display: flex;
    align-items: center;
    padding: 1rem 2rem;
    background: transparent;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    justify-content: space-between;
    font-size: 0.9rem;
  }
  .center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .about-icon {
    cursor: pointer;
    color: white;
    font-size: 1.5em;
  }
  .about-icon:hover {
    color: #ff9f1a;
  }
  .social-links {
    display: flex;
    align-items: center;
    gap: 0.7rem;
  }

  .social-links > .back {
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    display: none;
  }
  .end ul {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }
  .end li:last-child {
    display: flex;
    align-items: center;
  }
  @media only screen and (max-width: 768px) {
    header {
      padding-inline: 1rem;
    }
    .center {
      display: none;
    }
  }
</style>

<script>
  const path = window.location.pathname;
  const selector = path.split("/")[1];
  console.log(selector);
  const navLinks = document.querySelectorAll("header a");

  navLinks.forEach((link) => {
    if (link.getAttribute("href") === `/${selector}`) {
      link.classList.add("active");
    }
  });
  const backbtn = document.querySelector(".back") as HTMLSpanElement;
  if (path === "/" || path.length === 0) {
    backbtn.style.display = "none";
  } else {
    backbtn.style.display = "flex";
    backbtn.setAttribute("href", "/");
  }
</script>
