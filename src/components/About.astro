---
import { Icon } from "astro-icon/components";
import MediaLinks from "./MediaLinks.astro";
import Circle from "./Circle.astro";
import profile from "../assets/img/1.png";
import { calculateAge } from "../utils/utils";
---

<div class="about" data-about>
  <Icon name="mdi:close-octagon" data-cancel class="cancel" />
  <div class="content">
    <div class="profile">
      <Circle img={profile} />
      <h3>ùñÉùñö ùï∂ùñÜùñé</h3>
    </div>
    <table>
      <tr>
        <th>First Name: </th><td>Kai</td>
      </tr>
      <tr>
        <th>Family Name: </th><td>Xu</td>
      </tr>
      <tr>
        <th>Nickname: </th><td>Soso</td>
      </tr>
      <tr>
        <th>Nationality: </th><td>Chinese</td>
      </tr>
      <tr>
        <th>Gender: </th><td>Male</td>
      </tr>
      <tr>
        <th>Born: </th><td>5 March 1995</td>
      </tr>
      <tr>
        <th>Birthplace: </th><td>Shenzhen, <br />Guangdong,<br />China</td>
      </tr>
      <tr>
        <th>Age: </th><td>{calculateAge("1995-03-5")}</td>
      </tr>
    </table>
  </div>
  <div class="social-media-links">
    <MediaLinks />
  </div>
  <a href="/filmography" class="btn"> Filmography </a>
</div>

<style>
  .about {
    text-align: left;
    z-index: 2001;
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    width: min(300px, 70%);
    background-color: white;
    transform: translateX(100%);
    transition: transform 0.2s ease-in-out;
    padding-block: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: black;
    gap: 0.2rem;
    overflow-y: auto;
  }
  .profile {
    margin-block: 1rem;
    align-self: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
  }

  td {
    padding-block: 0.15rem;
    padding-inline: 0.3rem;
    font-size: 0.9rem;
  }
  .btn {
    padding: 0.5rem 0.8rem;
    margin-top: 0.5rem;
    border: none;
    cursor: pointer;
    transition: 0.2s ease-in-out;
    background-color: #2c3e50;
    color: white;
  }
  .btn:hover {
    transform: translateY(-5px);
    background-color: #2c3e50;
  }
  .cancel {
    position: absolute;
    top: 1rem;
    right: 1rem;
    color: red;
    font-size: 1.5rem;
    cursor: pointer;
  }
  .social-media-links {
    margin-top: auto;
  }
</style>
