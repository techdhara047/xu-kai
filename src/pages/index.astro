---
import { Image } from "astro:assets";
import img from "../assets/img/1.webp";
import { Icon } from "astro-icon/components";
import "../styles/global.css";

import About from "../components/About.astro";
import MediaLinks from "../components/MediaLinks.astro";
import Tabs from "../components/Tabs";
import Carousel from "../components/Carousel.astro";
import Search from "../components/Search";

import { getCollection } from "astro:content";
import ShadeDiv from "../components/ShadeDiv.astro";
import Filmography from "../components/Filmography.astro";
import Layout from "../layout/layout.astro";
import News from "../components/News.astro";

const filmography = await getCollection("filmography");
const counts = {
  0: 0,
  1: 0,
  2: 0,
};

filmography.forEach((item) => {
  if (item.data.type === 0) counts[0]++;
  if (item.data.type === 1) counts[1]++;
  if (item.data.type === 2) counts[2]++;
});
---

<Layout>
  <div class="container">
    <ShadeDiv top={true}>
      <section class="landing">
        <div class="box">
          <div class="banner">
            <div class="carousel-container">
              <Carousel />
            </div>
          </div>
          <div class="left">
            <h1>Xu Kai <span>( 许凯 )</span></h1>
            <!-- <h2>Chinese Actor</h2> -->
            <p>
              Xu Kai is a Chinese actor and model from Shenzhen who started his
              career by winning a modeling contest in 2013. He transitioned to
              acting with Huanyu Film in 2016 and gained acclaim for his role in
              Arsenal Military Academy, winning awards for his performance.
            </p>
            <div class="stats">
              <a class="rect" href="#series">
                <h4>{counts[0]}</h4>
                <p>TV Shows</p>
              </a>
              <a class="rect" href="#movies">
                <h4>{counts[1]}</h4>
                <p>Movies</p>
              </a>
              <a class="rect" href="#varietyshows">
                <h4>{counts[2]}</h4>
                <p>Variety Shows</p>
              </a>
            </div>
          </div>
          <div class="right">
            <figure>
              <Image src={img} alt="profile" format="avif" />
            </figure>
          </div>
        </div>
      </section>
    </ShadeDiv>
    <ShadeDiv>
      <div class="carousel">
        <Carousel />
      </div>
    </ShadeDiv>
    <ShadeDiv>
      <News />
    </ShadeDiv>
    <!-- <Search data={filmography} client:visible /> -->
    <!-- filmography -->
    <ShadeDiv>
      <Filmography />
    </ShadeDiv>
  </div>
</Layout>

<style>
  .shade {
    position: absolute;
    z-index: 10000;
    /* background-color: red; */
    bottom: 0;
    left: 0;
    right: 0;
    height: 3rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 1), transparent);
  }

  .landing {
    height: 100dvh;
    position: relative;
  }

  .box {
    display: flex;
    justify-content: space-around;
    height: 100%;
    position: relative;
  }

  .box > * {
  }
  .banner {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -3;
    display: flex;
  }

  .carousel-container {
    width: 80%;
  }
  .banner::before {
    content: ""; /* Required to make the pseudo-element appear */
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    background: linear-gradient(
      to left,
      rgba(38, 40, 39, 1) 0%,
      rgba(38, 40, 39, 1) 20%,
      rgba(0, 0, 0, 0.6) 60%,
      rgba(0, 0, 0, 0.3) 100%
    );
    pointer-events: none; /* Allows clicks to pass through the overlay */
  }

  .left {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: end;
    gap: 0.5rem;
    padding: 2rem;
    flex: 3;
  }
  .left h1 {
    font-size: clamp(2rem, 10vw, 5rem);
  }
  .left h1 > span {
    font-size: clamp(0.2em, 5vw, 0.5em);
  }
  .left h2 {
    font-size: clamp(2rem, 10vw, 2rem);
  }
  .left > p {
    line-height: 1.4rem;
    text-align: center;
  }
  .stats {
    display: flex;
    gap: 2rem;
    margin-top: 3rem;
  }
  .rect {
    padding: 1rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: end;
    cursor: pointer;
  }
  .rect:hover p {
    text-decoration: underline;
  }
  .rect h4 {
    font-size: 2.2rem;
    font-weight: bold;
    margin-bottom: 0.3rem;
  }
  .rect p {
    font-size: 0.85rem;
  }
  .right {
    flex: 2;
    display: flex;
    align-items: end;
    overflow: hidden;
    justify-content: space-around;
  }
  .right figure {
    /* height: 80%; */
    width: 70%;
    position: relative;
    /* background-color: red; */
    display: flex;
    align-items: end;
    justify-content: center;
  }
  .right img {
    /* width: 80%; */

    width: 100%;
    height: auto;
  }

  header {
    height: 40px;
    background-color: #ff9f1a;
    position: sticky;
    top: 0;
  }
  .main {
    height: 150dvh;
  }
  .carousel {
    display: none;
  }

  @media only screen and (max-width: 786px) {
    .right::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      top: 0;
      background: linear-gradient(
        to bottom,
        transparent 0%,
        transparent 20%,
        transparent 60%,
        rgba(38, 40, 39, 0.6) 80%,
        rgba(38, 40, 39, 0.8) 90%,
        rgba(38, 40, 39, 1) 100%
      );
    }
    .landing {
      height: auto;
    }
    .box {
      flex-direction: column-reverse;
    }
    .right {
      position: relative;
    }
    .right figure {
      width: 80%;
    }

    @keyframes fadein {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
    .stats {
      margin-top: 1rem;
      gap: 1rem;
    }
    .social-links {
      display: none;
    }
    .banner {
      display: none;
    }

    .carousel {
      height: 250px;
      display: block;
    }
  }
</style>

<script></script>
